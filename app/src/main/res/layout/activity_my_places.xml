<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/topcolor"/>

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        </android.support.v7.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoPlaceLiked"
            android:layout_centerHorizontal="true"
            android:text="Vous n'avez pas ajouté de lieux à vos favoris"
            android:textStyle="bold"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabToAddPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/half_black"
            fab:fab_title="Action A"
            fab:fab_colorPressed="@color/colorSecondaryText"
            fab:fab_icon="@drawable/ic_add_white_24dp"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>


    </RelativeLayout>


</LinearLayout>